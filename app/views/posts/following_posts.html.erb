<div class="body">
<div class="container">
  <div class="row">
    <div class="col-xs-8">
      
        
          <% @users.each do |user| %>

            <% @posts = Post.where(user_id: user.id).order("created_at DESC").page(params[:page]).per(10) %>
          <table class="table">
            <caption>あなたがフォローしている人の投稿</caption>
            <thead>
              <tr>
                <th>投稿者</th>
                <th>タイトル</th>
                
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
                <tr>

              

                <td><%= link_to post.user.name + "さん", user_path(user.id) %></td>
            
                <td><%= link_to post.body,post, class: "post_#{post.id}" %></td>

                  <% if post.category == 0 %>
                    <td>なんてしない</td>
                  <% else %>
                    <td>とか言わない</td>
                  <% end %>
            
                  <%= paginate @posts, class: "paginate" %>

                </tr>
              <% end %>
            </tbody>
          </table>


          <% end %>
        </tr>

      
    </div>
  </div>

</div>
</div>