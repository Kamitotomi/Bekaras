<div class="body">
	<div class="container">
		<p id="notice"></p>

		<div class="row">
			
			<div class="col-md-6 col-md-offset-3">
				<h1>Editing</h1>

				<%= form_for(@post) do |f| %>

					<% if @post.errors.any? %>
						<h3><%= @post.errors.count %>errors prohibited this book from being saved:</h3>
					<ul>
						<% @post.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
					</ul>

					<% end %>

					<h4>Bekaras</h4>
					<%= f.text_field :body %>

					<h4>エピソード</h4>
					<%= f.text_area :event,  rows:'5', class: "form-control",placeholder: "エピソードを入力してください" %>

					<%= f.submit 'Update Book' %>

				<% end %>

				<%= link_to "Show", post_path(@post) %>

							|

				<%= link_to "Back", posts_path %>
			
			</div>
		
		</div>

	</div>
	
</div>
