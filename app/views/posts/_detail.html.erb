						


						<td>
							<%= link_to user_path(post.user_id) do %>
							<%= attachment_image_tag post.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>  
							<p><%= post.user.name + "さん"%></p>
							<% end %>
								
						</td>
								
						
						
							<td><%= post.body %></td> 
								
							

							
								
							<td><%= post.category == 0 ? "なんてしない" : "とか言わない" %></td>
							<td><%= post.event %></td>

							<td><%= post.status == 0 ? "未達成" : "達成" %></td>

							<td>
          
          						<% if post.favorited_by?(current_user) %>
            						<%= link_to post_favorites_path(post, redirect_id: 0), method: :delete, remote: true do %>
              						<span class="glyphicon glyphicon-heart"><%= post.favorites.count%></span>
            						<% end %>
          								
          							<% else %>
            							
            						<%= link_to post_favorites_path(post, redirect_id: 0), method: :post, remote: true do %>
              						<span class="glyphicon glyphicon-heart-empty"><%= post.favorites.count %></span>
            						<% end %>
          						<% end %>
        					</td>

							<% if post.user == current_user %>
							<td><%= link_to '達成確認', edit_post_path(post), class: "btn btn-primary" %></td>
							<td><%= link_to '削除', post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-sm btn-danger destroy_book_#{post.id}"%></td>
							<% end %>
						
								
						
								
							