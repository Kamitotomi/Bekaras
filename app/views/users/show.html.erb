<div class="body">
	<div class="container">
		<p id="notice"></p>
		
		<div class="row">
		<%= flash[:notice] %>
			<div class="col-xs-3">
				<%= render 'users/info', user: @user %>
				<!-- user information -->
				
			</div>

			<!-- ログインユーザーの投稿一覧 -->
			<div class="col-xs-7">

				<% if current_user != @user %>
					<%= @user.name + "さんの挑むBekaras" %>
				<% else %>
						<p>あなたが今、挑戦しているBekarasです</p>
				<% end %>
				
			
			 <%= render 'posts/index',posts: @posts %>
			 
			</div>
			
		</div>
		
	</div>
	
</div>
